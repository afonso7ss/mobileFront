<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do Chamado"
        android:textColor="#033DC3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Descrição do Chamado -->
    <TextView
        android:id="@+id/tvDescricaoChamado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Descrição:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvTituloDetalhes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDetalhesDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Detalhes do problema serão mostrados aqui."
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvDescricaoChamado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de Resolver Chamado -->

</androidx.constraintlayout.widget.ConstraintLayout>